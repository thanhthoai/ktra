<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#F8F8F2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EE4E2E"
        android:orientation="horizontal"
        android:padding="15dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="system-ui"
            android:text="Thông báo"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="80px"
            android:layout_marginRight="5dp"

            android:src="@drawable/giohang">
        </ImageView>
        <ImageView
            android:layout_width="100px"
            android:layout_height="80px"
            android:layout_marginRight="1dp"
            android:src="@drawable/ib">
        </ImageView>

    </LinearLayout>
    <LinearLayout

        android:background="#FDFDFC"
        android:padding="10dp"
        android:id="@+id/headerTop"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    </LinearLayout>

    <LinearLayout
        android:background="#FAF6D8"
        android:padding="5dp"
        android:id="@+id/headerBottom"
        android:layout_below="@id/headerTop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>


    <ListView
        android:id="@+id/listviewCauthu"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/headerBottom"
        android:layout_marginTop="-2dp"
        android:background="#fff"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="204dp"
        android:background="#EEEEE0"
        android:orientation="horizontal"
        android:padding="7dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="Lucida Console"
        android:text="Cập nhật đơn hàng "
        android:textColor="#1C1C1C"
        android:textSize="20dp"
         />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="42dp"
        android:layout_weight="1"
        android:src="@drawable/h1"></ImageView>

</RelativeLayout>
